{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "target": "ES2021",
    "module": "NodeNext",
    "rootDir": "./src",
    "sourceMap": true,
    "lib": ["ES2021"],
    "strict": true,
    "types": ["@types/node"]
  },
  "exclude": ["./test", "./node_modules"]
}
